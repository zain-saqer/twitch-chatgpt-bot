{{define `body`}}
    <div class="container my-5">
        <div class="row ">
            <div class="col-lg-6">
                {{template `channels` .Channels}}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{template `usernames` .Usernames}}
            </div>
        </div>
    </div>
{{end}}

{{define `channels`}}
    <h3>Channels</h3>
    <p>
        <a class="btn btn-secondary btn-sm" href="/add-channel">Add channel</a>
    </p>
    <ul>
        {{range .}}
            <li>{{.Name}} <button class="btn btn-text" hx-delete="/channels/{{.ID}}">Remove</button></li>
        {{end}}
    </ul>
    {{if not .}}
        <p class="text-mute">No channels</p>
    {{end}}
{{end}}

{{define `usernames`}}
        <h3>Username whitelist</h3>
        <p>
            <a class="btn btn-secondary btn-sm" href="/add-username">Add channel</a>
        </p>
    <ul>
        {{range .}}
            <li>{{.Name}} <button class="btn btn-text" hx-delete="/usernames/{{.ID}}">Remove</button></li>
        {{end}}
    </ul>
    {{if not .}}
        <p class="text-mute">No usernames</p>
    {{end}}
{{end}}